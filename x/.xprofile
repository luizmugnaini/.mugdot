#!/bin/bash
picom -b &

# HDMI support
xrandr --output HDMI1 --auto &
xrandr --output eDP-1 --auto --right-of HDMI-1 &

# dwm bar
dwmblocks &

# Wallpaper
feh --bg-fill --no-fehbg ~/Pictures/wallpapers/murky_peaks.jpg &

# emacs
#/usr/bin/emacs --daemon &

# Keyboard layout
setxkbmap us -option caps:swapescape &
#setxkbmap br -variant nodeadkeys -option caps:swapescape &
xset r rate 500 60

# screen filter
redshift -P -O 5000 &

# Locking (for timer, just insert something like `-time 10`)
xautolock -locker slock &
